<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
        android:id="@+id/activity_talking_bgiv"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/activity_talking_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#565656"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"/>
    <TextView
        android:id="@+id/activity_talking_state"
        android:textSize="20dp"
        android:textColor="#999999"
        android:shadowColor="#555555"
        android:shadowRadius="2"
        android:shadowDx="1"
        android:shadowDy="1"
        android:layout_below="@+id/activity_talking_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/activity_talking_hangup_btn"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:text="Hang up"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:gravity="center"
        android:background="@drawable/btn_hangup_style"
        android:layout_width="600dp"
        android:layout_height="100dp"/>
    <com.tl.coffee.talking.view.ui.AnswerToggleBtn
        android:id="@+id/activity_talking_togglebtn"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>